
<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, :class => "form-control" %>
    <div class="bg-danger"> 
      <%= get_error_message(:first)name, @user) if @user.errors[:name] %> 
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, :class => "form-control" %>
    <div class="bg-danger"> 
      <%= get_error_message(:description, @product) if @product.errors[:description] %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_area :price, :class => "form-control" %>
    <div class="bg-danger"> 
      <%= get_error_message(:price, @product) if @product.errors[:price] %>
    </div>
  </div>
  <%= collection_select(:product, :category_id, @categories,:id, :name ) %>
  <%= f.submit "Create", :class => "btn btn-primary" %>
<% end %>










