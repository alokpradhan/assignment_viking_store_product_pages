<div class="bg-success"><%= flash[:success] %></div>
  <div class="panel panel-defualt">
  <div class="panel-body">
    <h2 class="text-center" >Viking Store Products</h2>

      <%= link_to "Create New Product", new_product_path , :class => "btn btn-primary btn-lg btn-block" %>

<table class="table table-striped">
  
    <th>ID</th>
    <th>SKU</th>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
    <th>Category ID</th>
    <th>Created</th>
    <th>Updated</th> 
  
  <% @products.each do |p| %>
  <tr>
    <td><%= p.id  %></td>
    <td><%= p.sku.round  %></td>
    <td><%= p.name  %></td>
    <td><%= p.description  %></td>
    <td>Â£<%= p.price.round(2)%></td>
    <td> <%= p.category_id %></td>
    <td><%= p.created_at.strftime("%m/%d/%Y")  %></td>
    <td><%= p.updated_at.strftime("%m/%d/%Y")  %></td>
    <td><%= link_to "show", product_path(p) %></td>
    <td><%= link_to "edit", edit_product_path(p) %></td>
    <td><%= link_to "delete", product_path(p), :method => :delete, :confirm => "Are you sure?" %></td>
  </tr>
  <% end %>
</table>