<%= form_for @product do |f| %>
  <div class="form-group">
    <label for="SKU">SKU (Automatically Generated)</label>
    <input type="text" name="SKU" class="form-control" disabled="true" value="<%=@product.sku%>">
  </div>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => "form-control" %>
    <div class="bg-danger"> 
      <%= get_error_message(:name, @product) if @product.errors[:name] %> 
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, :class => "form-control" %>
    <div class="bg-danger"> 
      <%= get_error_message(:description, @product) if @product.errors[:description] %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_area :price, :class => "form-control" %>
    <div class="bg-danger"> 
      <%= get_error_message(:price, @product) if @product.errors[:price] %>
    </div>
  </div>
  <div class="dropdown">
    <button class="btn btn-default dropdown-toggle" type="button" id="menu1" data-toggle="dropdown">Tutorials
    <span class="caret"></span></button>
    <ul class="dropdown-menu" role="menu" aria-labelledby="menu1">
      <li role="presentation"><a role="menuitem" tabindex="-1" href="#">HTML</a></li>
      <li role="presentation"><a role="menuitem" tabindex="-1" href="#">CSS</a></li>
      <li role="presentation"><a role="menuitem" tabindex="-1" href="#">JavaScript</a></li>
      <li role="presentation" class="divider"></li>
      <li role="presentation"><a role="menuitem" tabindex="-1" href="#">About Us</a></li>
    </ul>
  </div>
